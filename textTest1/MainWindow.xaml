<Window x:Class="textTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:textTest1"
        mc:Ignorable="d"
        Title="Программа" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="Menu1" Header="Файл">
                <MenuItem x:Name="createNew" Header="Создать новый файл" Click="createNew_Click"></MenuItem>
                <MenuItem x:Name="OpenFile" Header="Открыть файл" Click="OpenFile_Click"></MenuItem>
                <MenuItem x:Name="SafeFile" Header="Сохранить файл" Click="SafeFile_Click"></MenuItem>
                <MenuItem x:Name="Exit" Header="Закрыть файл" Click="Exit_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" Width="782" Margin="0,5,0,1"/>
    </DockPanel>
</Window>
